{
  "name": "@simon_he/starter-cli",
  "type": "module",
  "version": "0.0.12",
  "description": "",
  "author": "Simon He",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/starter-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simon-He95/starter-cli.git"
  },
  "bugs": "https://github.com/Simon-He95/starter-cli/issues",
  "keywords": [
    "cli",
    "starter",
    "template",
    "starter-cli",
    "startup",
    "boilerplate",
    "starter-kit"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "simon": "./cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "simple-git-hooks",
    "build": "tsup ./src/index.ts --format cjs,esm --dts --clean",
    "dev": "npm run build -- --watch src",
    "format": "prettier --write --cache .",
    "lint": "eslint . --cache",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@simon_he/clack-prompts": "^0.8.11",
    "lazy-js-utils": "^0.1.33",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@types/node": "^18.19.80",
    "bumpp": "^8.2.1",
    "eslint": "^8.57.1",
    "esno": "^0.16.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^6.7.0",
    "tsx": "^4.19.3",
    "typescript": "^4.9.5",
    "vitest": "^0.15.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
