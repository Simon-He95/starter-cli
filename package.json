{
  "name": "@simon_he/starter-cli",
  "type": "module",
  "version": "0.0.14",
  "description": "",
  "author": "Simon He",
  "license": "MIT",
  "funding": "https://github.com/sponsors/Simon-He95",
  "homepage": "https://github.com/Simon-He95/starter-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Simon-He95/starter-cli.git"
  },
  "bugs": "https://github.com/Simon-He95/starter-cli/issues",
  "keywords": [
    "cli",
    "starter",
    "template",
    "starter-cli",
    "startup",
    "boilerplate",
    "starter-kit"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "simon": "./cli.mjs"
  },
  "files": [
    "cli.mjs",
    "dist"
  ],
  "scripts": {
    "build": "tsdown ./src/index.ts --format cjs,esm --dts --clean",
    "dev": "npm run build -- --watch src",
    "format": "prettier --write --cache .",
    "lint": "eslint . --cache",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@simon_he/clack-prompts": "^0.8.11",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/node": "^18.19.130",
    "bumpp": "^8.2.1",
    "eslint": "^9.39.2",
    "esno": "^0.16.3",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "tsdown": "^0.18.1",
    "tsx": "^4.21.0",
    "typescript": "^4.9.5",
    "vitest": "^4.0.16"
  },
  "simple-git-hooks": {
    "pre-commit": "npm exec -- lint-staged --concurrent false",
    "commit-msg": "npm exec -- tsx scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
